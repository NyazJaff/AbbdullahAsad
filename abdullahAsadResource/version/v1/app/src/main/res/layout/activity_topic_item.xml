<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TopicItemActivity">

    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/header_bg_tran"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/app_bar"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar_back_nav">

        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:backgroundTint="@color/colorAccent"
            android:indeterminate="true"
            android:indeterminateTint="#1a09d6"
            android:max="100"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/mp3ViewConstraint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <SeekBar
                    android:id="@+id/positionBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginStart="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/elapsedTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="0:00"
                    app:layout_constraintStart_toStartOf="@+id/positionBar"
                    app:layout_constraintTop_toBottomOf="@+id/positionBar" />

                <TextView
                    android:id="@+id/remainingTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="--:--"
                    app:layout_constraintEnd_toEndOf="@+id/positionBar"
                    app:layout_constraintTop_toBottomOf="@+id/positionBar" />

                <Button
                    android:id="@+id/playBtn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/ic_play_button"
                    app:layout_constraintEnd_toStartOf="@+id/remainingTimeLabel"
                    app:layout_constraintHorizontal_bias="0.4"
                    app:layout_constraintStart_toEndOf="@+id/button_back_five_seconds"
                    app:layout_constraintTop_toBottomOf="@+id/positionBar" />

                <Button
                    android:id="@+id/button_back_five_seconds"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="39dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="34dp"
                    android:autoMirrored="true"
                    android:drawableLeft="@drawable/ic_single_left_arrows_layout"
                    android:paddingLeft="6dp"
                    android:textColor="@color/blue"
                    app:layout_constraintStart_toEndOf="@+id/button_back_ten_seconds"
                    app:layout_constraintTop_toBottomOf="@+id/positionBar" />

                <Button
                    android:id="@+id/button_back_ten_seconds"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="40dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="52dp"
                    android:layout_marginStart="52dp"
                    android:drawableLeft="@drawable/ic_two_left_arrow_layout"
                    android:paddingLeft="6dp"
                    android:textColor="@color/blue"
                    app:layout_constraintStart_toStartOf="@+id/elapsedTimeLabel"
                    app:layout_constraintTop_toBottomOf="@+id/elapsedTimeLabel" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="5 Sec"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@+id/button_back_five_seconds"
                    app:layout_constraintStart_toStartOf="@+id/button_back_five_seconds"
                    app:layout_constraintTop_toBottomOf="@+id/button_back_five_seconds" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="10 Sec"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@+id/button_back_ten_seconds"
                    app:layout_constraintStart_toStartOf="@+id/button_back_ten_seconds"
                    app:layout_constraintTop_toBottomOf="@+id/button_back_ten_seconds" />
            </android.support.constraint.ConstraintLayout>

            <com.github.barteksc.pdfviewer.PDFView
                android:id="@+id/pdfView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mp3ViewConstraint">

            </com.github.barteksc.pdfviewer.PDFView>

            <ImageButton
                android:id="@+id/blurredPdfImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pdf_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mp3ViewConstraint" />

            <ImageButton
                android:id="@+id/pdfDownloadBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitStart"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/blurredPdfImage"
                app:layout_constraintEnd_toEndOf="@+id/blurredPdfImage"
                app:layout_constraintStart_toStartOf="@+id/blurredPdfImage"
                app:layout_constraintTop_toTopOf="@+id/blurredPdfImage"
                app:srcCompat="@drawable/ic_download_circular_blue" />

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <include
        android:id="@+id/app_bar_back_nav"
        layout="@layout/app_bar_back_nav" />


</android.support.constraint.ConstraintLayout>